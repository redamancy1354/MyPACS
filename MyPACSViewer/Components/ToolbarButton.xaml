<Button x:Class="MyPACSViewer.Components.ToolbarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyPACSViewer.Components">
    <StackPanel>
        <Image Height="30" Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ToolbarButton}},Path=Source}"/>
        <AccessText Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ToolbarButton}},Path=Text}"/>
    </StackPanel>
</Button>
