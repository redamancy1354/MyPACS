<DockPanel x:Class="MyPACSViewer.View.Viewer2D"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPACSViewer.View"
        d:DesignHeight="450" d:DesignWidth="800"
        mc:Ignorable="d">
    
    <Slider DockPanel.Dock="Bottom"></Slider>

    <Grid>
        <Image x:Name="DicomImage" Opacity="0.5"/>
        <Canvas>
            <TextBlock x:Name="LeftTopText" Canvas.Left="10" Canvas.Top="10"/>
            <TextBlock x:Name="LeftBottomText" Canvas.Left="10" Canvas.Bottom="10"/>
            <TextBlock x:Name="RightTopText" Canvas.Right="10" Canvas.Top="10"/>
            <TextBlock x:Name="RightBottomText" Canvas.Right="10" Canvas.Top="10"/>
        </Canvas>
        <Image x:Name="MaskImage"/>
    </Grid>


</DockPanel>
